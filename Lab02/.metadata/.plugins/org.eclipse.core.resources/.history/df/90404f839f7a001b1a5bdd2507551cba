package star;
import java.util.Scanner;
public class TriagleStar {
	public static void main(String[] args) {
		try (Scanner scanner = new Scanner(System.in)) {
			int a;
			a = scanner.nextInt();
			for(int i=0; i<a; i++) {
				for(int j= a-i-1; j>=0; j--)
					System.out.println(" ");
				System.out.println("*");
			}
		}
	}
}